<% for (let filter of data.filters) { %>
    <div class="form-group col-xs-12 col-md-6 col-lg-3">
        <label><%= filter.title %></label>
        <select class="form-control task-filter" data-filter="<%= filter.type %>" >
            <% for (let option of filter.options) { %>
                <option value="<%= option.value %>" <%= option.value == filter.selected ? 'selected' : '' %>><%= option.title %></option>
            <% } %>
        </select>
    </div>
<% } %>